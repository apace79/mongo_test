{
    "compilerOptions": {
        "lib": [
            "ES2021"
        ],
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
