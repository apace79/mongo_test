{
    "name": "mongo",
    "version": "0.0.1",
    "description": "Mongodb test",
    "main": "dist/index.js",
    "directories": {
        "test": "test"
    },
    "engines": {
        "node": "^16.13.2"
    },
    "scripts": {
        "get-version": "echo $npm_package_version",
        "build": "npm run build-ts && npm run lint",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "start": "node dist/index.js",
        "start-dev": "nodemon --inspect=0.0.0.0:5858 dist/index.js",
        "watch-dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run start-dev\"",
        "dev": "npm run watch-dev",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet",
        "test": "jest --coverage -i /test/unit /test/integration",
        "unit": "jest --coverage /test/unit",
        "integration": "jest --coverage -i /test/integration",
        "clear-cache": "jest --clearCache",
        "view_coverage": "open coverage/lcov-report/index.html"
    },
    "keywords": [],
    "author": "Andrea Pace",
    "license": "ISC",
    "dependencies": {
        "@sinclair/typebox": "^0.22.1",
        "express": "^4.17.2",
        "joi": "^17.6.0",
        "mongodb": "^4.3.1",
        "pino": "^7.6.5",
        "pino-http": "^6.6.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.3",
        "@types/node": "^16.11.9",
        "@types/sinon": "^10.0.6",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "concurrently": "^6.4.0",
        "eslint": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jest": "^25.3.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.3.1",
        "nock": "^13.2.1",
        "nodemon": "^2.0.15",
        "prettier": "^2.4.1",
        "sinon": "^12.0.1",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.2"
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts",
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.js",
            "src/**/*.ts"
        ],
        "roots": [
            "src",
            "test"
        ],
        "verbose": true
    },
    "prettier": {
        "printWidth": 100
    }
}
